<script>
    $(function () {
        tableInit();
        //导入
        $("#export .export").click(function(){
        	$(this).prev().click();
        })
        $("#export input[type='file']").change(function(){
        	$(this).siblings("input").val($(this).val());
        })
    });
    function tableInit(){
        $("#userTable").jqGrid({
            url:"$path/users",
            datatype:"json",
            mtype:"get",
            height:'auto',
            autowidth:true,
            postData: {
                search : JSON.stringify($('#userForm').serializeObject())
            },
            colNames:['编号', '姓名', '岗位','站点','管理员'  ,"操作"],
            colModel:[
                {name:'userCode', width:'15%'},
                {name:'userName', width:'15%'},
                {name:'userJob', width:'15%'},
                {name:'station', width:'15%'},
                {name:'isAdmin', width:'10%',formatter:function(cellvalue,options,rowObject){
                    return rowObject.isAdmin == 1 ? '是' : '否';
                }},
                {name:'operation', width:'10%',formatter:function(cellvalue,options,rowObject){
                    var	str='';
                        str = '<a href="javascript:;"' + (rowObject.isDeleted == 0 ? 'onclick="editUser('+ rowObject.userId +')" class="edit"' : 'class="edit disabled"') +'>编辑</a>';
                        str += '<a class="stop" href="javascript:;" onclick="userDel('+ rowObject.userId+')">删除</a>';
                    return str;
                }},
            ],
            viewrecords: true,//是否在浏览导航栏显示记录总数
            rowNum:10,//每页显示记录数
            pager:$('#pager'),
            jsonReader:{
                page: "page",
                total: "pages",
                records: "count",
                root: "results",
                repeatitems: false,
                id: "userId"
            }
        });
        jQuery("#userTable").jqGrid('navGrid','#pager',{edit:false,add:false,del:false});
    }

    function editUser(userId){
        jQuery.ajax({
            type: "get",
            url: "$path/users/"+userId ,
            data: null,
            dataType: "json",
            error: function (xmlHttpReq, status) {
                Alert("fail","网络错误");
            },
            success: function (data) {
                selectAdmin(data.isAdmin);
                $("#editUserId").val(userId);
                $("#editIsAdmin").val(data.isAdmin);
                $("#editUserName").val(data.userName);
                $("#editUserCode").val(data.userCode);
                $("#editUserJob").val(data.userJob);
                $("#editStation").val(data.station);
                $("#editPassword").val(data.userPass);
                $("#editRoleIds").val(data.roleIds);
                $("#editGender").val(data.gender);
                $("#editPhoneNumber").val(data.phoneNumber);
                $("#editBirthday").val(data.birthday);
                $("#editIdCode").val(data.idCode);
                $("#editOnBoardDate").val(data.onBoardDate);
                $("#editIsMarried").val(data.isMarried);
                $("#editHasChild").val(data.hasChild);
                $("#editEduBackGround").val(data.eduBackGround);
                $("#editIsPartyMember").val(data.isPartyMember);
                $("#editJoinDate").val(data.joinDate);
                $("#editHomeAddress").val(data.homeAddress);
                $("#editCertNo").val(data.certNo);
                $("#editCertLevel").val(data.certLevel);
                $("#editUser").modal('show');
                $("#mask",parent.document).show();
            }
        });
    }

    function userUpdate(){
        var result = formValidation($("#userEditForm"));
        if (!result) {
            return false;
        }
        jQuery.ajax({
            async: false,
            type: "put",
            url: "$path/users?" + $('#userEditForm').serialize(),
            data: null,
            dataType: "json",
            error: function () {
                Alert('fail',"网络错误");
            },
            success: function (result) {
                Alert(result.data, result.message);
	            setTimeout(function(){
	                $("#editUser").modal('hide');
	            },500)
	            $(".ui-jqgrid-btable").jqGrid().trigger('reloadGrid');
            }
        })
    }

    function userDel(userId){
        jQuery.ajax({
            async: false,
            type: "put",
            url: "$path/users/" + userId + "/userDel",
            dataType: "json",
            error: function () {
                Alert(0,"网络错误");
            },
            success: function (result) {
                Alert(result.data, result.message);
                getTableData();
            }
        });
    }
    function getTableData() {
        var search=$("input[name=userSearch").val();
        $("input[name=userCode").val(search);
        $("input[name=userName").val(search);
        $("input[name=userJob").val(search);
        $("#userTable").jqGrid('setGridParam',{
            postData: {
                search : JSON.stringify($('#userForm').serializeObject())
            }
        }).trigger('reloadGrid');
    }
    function selectAdmin(isAdmin){
        if(isAdmin==1){
            $(".user_pass").removeClass("hidden");
            $(".user_role").removeClass("hidden");
        } else {
            $(".user_pass").addClass("hidden");
            $(".user_role").addClass("hidden");
        }
    }
    function userAdd(){
        var result = formValidation($("#userAddForm"));
        if (!result) {
            return false;
        }
        jQuery.ajax({
            async: false,
            type: "post",
            url: "$path/user/addUser",
            data: $('#userAddForm').serialize(),
            dataType: "json",
            error: function (request) {
                Alert("fail", "网络错误");
            },
            success: function (result) {
                Alert(result.data, result.message);
                setTimeout(function(){
                    $("#addUser").modal("hide");
                },500)
                $(".ui-jqgrid-btable").jqGrid().trigger('reloadGrid');
            }
        });
    }

    function isValidateFile() {
        var fileName = $.trim($("input[name='fileUpload']").val());
        var extend = ""!=fileName?fileName.substring(fileName.lastIndexOf(".")+1).toLowerCase():"";
        if (""!=extend&&",xls,xlsx,".indexOf(","+extend+",")>-1) {
            return true;
        } else if (""==extend) {
            Alert("fail", "文件未加载完成,或未上传文件");
            return false;
        } else {
            Alert("fail", "目前仅支持excel文件");
            return false;
        }
    }

    function saveLog() {
        if (isValidateFile()) {
            var formData = new FormData($( "#createImpFile" )[0]);
            jQuery.ajax({
                async: false,
                type: "post",
                url: "$path/user/createImpFile",
                data: formData,
                // 告诉jQuery不要去处理发送的数据
                processData : false,
                // 告诉jQuery不要去设置Content-Type请求头
                contentType : false,
                dataType: "json",
                error: function (request) {
                    Alert("fail", "网络错误");
                    setTimeout(function(){
                        $("#export").modal("hide");
                    },500);
                },
                success: function (result) {
                    Alert(result.data, result.message);
                    setTimeout(function(){
                        $("#export").modal("hide");
                    },500);
                    $(".ui-jqgrid-btable").jqGrid().trigger('reloadGrid');
                }
            });
        }
    }

    //表单验证
    function formValidation(form) {
        var obj = form.find(".require").next();
        var n = 0;
        obj.each(function(){
            //文本框验证
            if(($(this).is("input") && $.trim($(this).val()) == '') ||
                    ($(this).is(".dropDown") && $(this).find(".select-drop li").length == 0) ||
                    ($(this).is("select") && $(this).val() == 0) ||
                    ($(this).is("textarea") && $.trim($(this).val()) == '') ||
                    ($(this).is(".datetimepicker") && $.trim($(this).find("input").val()) == '')
            ){
                var text = $(this).prev().text();
                var error = text.substring(0);
                var str = ($(this).is("select") ? '<b>请选择'+ error +'</b>' : '<b>'+ error +'不为空</b>');
                if($(this).next().is("b")){
                    str = ($(this).is("select") ? '请选择'+ error : error +'不为空');
                    $(this).next().text(str);
                }else{
                    $(str).insertAfter($(this));
                }
                n++;
            }else{
                if($(this).next().is("b")){
                    $(this).next().text('');
                }
            }
        })
        return (n == 0 ? true : false);
    }
</script>
