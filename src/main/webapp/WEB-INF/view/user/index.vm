            <input type="hidden" name="userCode">
            <input type="hidden" name="userName">
            <input type="hidden" name="userJob">
        </div>
        <a class="btnDefault bgBlue"  onclick="getTableData()" href="javascript:void(0);">查询</a>
    </div>
</div>
